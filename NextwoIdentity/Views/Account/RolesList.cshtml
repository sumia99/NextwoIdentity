@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole> 
@{
    ViewData["Title"] = "Roles List";
}

<h1>Roles List</h1>
<a asp-action="CreateRole" class="btn btn-primary">Create New Role</a>

<table class="table table-bordered">
    <tr>
     <th>@Html.DisplayNameFor(m=>m.Name)</th>
     <th>Operations</th>
    </tr>
    
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>
                    <a asp-action="EditRole" class="btn btn-success" asp-route-id="@item.Id"> Edit Role</a>
                    <a asp-action="DeleteRole" class="btn btn-danger" asp-route-id="@item.Id"> Delete Role</a>
                </td>
            </tr>
            
        }

</table>


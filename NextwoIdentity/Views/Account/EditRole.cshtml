@model NextwoIdentity.Models.ViewModels.EditRoleViewModel

@{
    ViewData["Title"] = "EditRole";
}

<h1>Edit Role</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditRole">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RoleId" class="control-label"></label>
                <input asp-for="RoleId" readonly class="form-control" />
                <span asp-validation-for="RoleId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RoleName" class="control-label"></label>
                <input asp-for="RoleName" class="form-control" />
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="RoleList"  asp-controller="Account">cancel</a>
            </div>
        </form>
    </div>
</div>

<div class="Card">
    <div class="card-header">
        Users in this role
    </div>
    <div class="card-body">
        @if (Model.Users!.Any())
        {
        @foreach (var user in Model.Users!)
        {
        @user    
        }
        }
    </div>
    <div class="card-footer"></div>
    <a asp-action="ModifyUserInRole" class="btn btn-primary" asp-controller="Account" asp-route-id="@Model.RoleId">
        Add/Remove users from this role 
    </a>
</div>

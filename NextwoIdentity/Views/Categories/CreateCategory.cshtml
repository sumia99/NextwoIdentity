@model NextwoIdentity.Models.Category

@{
    ViewData["Title"] = "CreateCategory";
}

<h1>CreateCategory</h1>

<h4>Category</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateCategory">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CategoryName" class="control-label"></label>
                <input asp-for="CategoryName" class="form-control" />
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            @if (ViewBag.check == "exists")
            {
            <span class="alert-warning">try again this category allredy exist !</span>    
            }
        </form>
    </div>
</div>

